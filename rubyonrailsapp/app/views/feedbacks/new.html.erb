<% content_for(:title) do %>
  Feedback &middot;
<% end %>

<% content_for(:breadcrumbs) do %>
  <li>Feedback</li>
<% end %>

<div class="feedback">
  <h1>Feedback</h1>

  <p>Please fill out the following form to send a message us. Thank you.</p>

  <%= form_with(model: @feedback, url: feedback_path, local: true) do |form| %>
    <% if @feedback.errors.any? %>
      <div class="panel panel-danger">
        <div class="panel-heading">
          <%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:
        </div>

        <div class="panel-body">
          <ul>
            <% @feedback.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= form.label :name, class: "control-label" %>
          <%= form.text_field :name, autofocus: true, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= form.label :email, class: "control-label" %>
          <%= form.text_field :email, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :subject, class: "control-label" %>
          <%= form.text_field :subject, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-9">
        <div class="form-group">
          <%= form.label :message, class: "control-label" %>
          <%= form.text_area :message, rows: 7, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= button_tag type: "submit", class: "btn btn-default" do %>
        Send
      <% end %>
    </div>
  <% end %>
</div>
