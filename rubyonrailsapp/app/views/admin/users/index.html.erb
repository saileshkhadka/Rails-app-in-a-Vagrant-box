<% content_for(:title) do %>
  Users &middot;
<% end %>

<div class="page-header">
  <h1>Users</h1>
</div>

<%= render 'nav' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Sign in count</th>
      <th>Created at</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.email, edit_admin_user_path(user) %></td>
        <td><%= user.sign_in_count %></td>
        <td><%= l user.created_at, format: :long %></td>
        <td class="text-center">
          <%= link_to "<span class=\"glyphicon glyphicon-remove\"></span>".html_safe, admin_user_path(user),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
